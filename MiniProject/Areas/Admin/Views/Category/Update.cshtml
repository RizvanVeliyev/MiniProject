@model CategoryUpdateViewModel

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Category
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>



                <div class="form-group">
                    <label asp-for="ParentId">Parent Category</label>
                    <select asp-for="ParentId" asp-items="Model.ParentCategories" class="form-control">
                        <option value="">Select Parent Category</option>
                    </select>
                    <span asp-validation-for="ParentId"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>
