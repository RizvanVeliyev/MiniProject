@using Pustok.DAL.Enums
@model ChangeRoleViewModel

@{
    ViewData["Title"] = "Change Role";
}

<h2>Change Role</h2>

<form asp-action="ChangeRole" method="post">
    <div class="form-group">
        <label for="userId">User ID</label>
        <input type="text" id="userId" name="UserId" value="@Model.UserId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="currentRole">Current Role</label>
        <input type="text" id="currentRole" name="CurrentRole" value="@Model.NewRole" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="newRole">New Role</label>
        <select id="newRole" name="NewRole" class="form-control">
            <option value="">-- Select Role --</option>
            @foreach (var role in Enum.GetValues(typeof(IdentityRoles)).Cast<IdentityRoles>())
            {
                if (role == Model.NewRole)
                {
                    <option value="@role" selected>@role</option>
                }
                else
                {
                    <option value="@role">@role</option>
                }
            }

        </select>
    </div>
    <button type="submit" class="btn btn-primary">Change Role</button>
</form>
