@using Pustok.DAL.Enums
@model ChangeRoleViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Change User Role</h1>

<div>
    <form asp-action="ChangeRole" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="UserId" type="hidden" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="NewRole">New Role</label>
            <select asp-for="NewRole" class="form-control">
                @foreach (var role in Enum.GetValues(typeof(IdentityRoles)))
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Role</button>
    </form>
</div>